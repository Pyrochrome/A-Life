{
    "configurations": [
        {
            "targetArchitecture": "arm",
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/life.elf",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerServerAddress": "localhost:2345",

            "windows": {
                "miDebuggerPath": "${env:ProgramFiles(x86)}/Arm GNU Toolchain arm-none-eabi/12.2 rel1/bin/arm-none-eabi-gdb.exe",
                "setupCommands": [
                    {
                    "text": "shell start /b \"\" \"${env:ProgramFiles}/mGBA/mGBA.exe\" -g \"${workspaceFolder}/life.elf\""
                    }
                ]
            },

            "linux": {
            "miDebuggerPath": "${env:DEVKITARM}/bin/arm-none-eabi-gdb",
            "setupCommands": [
                {
                    "text": "shell \"mgba\" -g \"${workspaceFolder}/life.elf\" &"
                }
            ]
            }
        }
    ]
}
